<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Custom Carousel-1 Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <slides
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                composite="{Boolean}true"
                fieldLabel="Slide Properties">
                <field
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container"
                    name="./slides">
                    <items jcr:primaryType="nt:unstructured">
                        <sliderImage
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                            fieldLabel="Slider Image"
                            name="./sliderImage"
                            rootPath="/content/dam/mico-hospital/images"/>
                        <sliderImageAltText
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Slider Image Alt Text"
                            name="./sliderImageAltText"/>
                        <sliderContent
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                            fieldLabel="Slider Content"
                            name="./sliderContent"/>
                        <buttonLink
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                            fieldLabel="Button Link"
                            name="./buttonLink"/>
                        <buttonName
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Button Name"
                            name="./buttonName"/>
                    </items>
                </field>
            </slides>
            <prevButtonImage
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                fieldLabel="Previous Button Image"
                name="./prevButtonImage"
                rootPath="/content/dam/mico-hospital/images"/>
            <nextButtonImage
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                fieldLabel="Next Button Image"
                name="./nextButtonImage"
                rootPath="/content/dam/mico-hospital/images"/>
            <backgroundImage
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                fieldLabel="Background Image"
                name="./backgroundImage"
                rootPath="/content/dam/mico-hospital/images"/>
        </items>
    </content>
</jcr:root>
